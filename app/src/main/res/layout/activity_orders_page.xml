<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="3.05"
        android:id="@+id/layout1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Logout"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:id="@+id/btnLogout"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="match_parent"
            android:background="#c0c0c0"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Refresh"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:id="@+id/btnRefresh"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="match_parent"
            android:background="#c0c0c0"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Track me"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/black"
            android:id="@+id/btntracemylocation"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_relative_vco"
        android:layout_margin="10dp"
        android:layout_below="@id/layout1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Goto vco"
            android:textColor="@color/white"
            android:background="@color/green"
            android:id="@+id/btn_show_vco"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online App Orders"
        android:id="@+id/order_category"
        android:layout_below="@id/layout_relative_vco"
        android:background="@color/black"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="italic" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_below="@id/order_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_incoming_orders"
        android:scrollbars="vertical"/>

</RelativeLayout>